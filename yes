-- Blade Ball Autoparry Script

-- Get the local player
local player = game.Players.LocalPlayer

-- Connect a function to be executed each frame
game:GetService("RunService").RenderStepped:Connect(function()
    -- Check if the player exists and is in the game
    if player and player.Character and player.Character:FindFirstChild("Humanoid") then
        -- Find the ball in the workspace
        local ball = game.Workspace:FindFirstChild("Ball")
        
        -- Check if the ball exists
        if ball then
            -- Calculate the direction from the player to the ball
            local direction = (ball.Position - player.Character.HumanoidRootPart.Position).unit
            
            -- Define the force to hit the ball
            local hitForce = direction * 50
            
            -- Apply force to hit the ball in the calculated direction
            ball:ApplyImpulse(hitForce)
        end
    end
end)
