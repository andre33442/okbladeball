-- AutoParryScript (Roblox Lua)

-- Define the parry distance
local parryDistance = 20  -- Adjust this distance as needed

-- Function to find the ParryTool in the player's Backpack
local function findParryTool(player)
    local backpack = player.Backpack
    for _, tool in pairs(backpack:GetChildren()) do
        if tool:IsA("Tool") and tool.Name == "ParryTool" then
            return tool
        end
    end
    return nil
end

-- Function to check the ball's proximity and automatically parry
local function autoParry()
    local player = game.Players.LocalPlayer
    local character = player.Character
    local ball = workspace.BladeBall  -- Assuming the ball's name is "BladeBall"

    if character and ball then
        local ballPosition = ball.Position
        local playerPosition = character.HumanoidRootPart.Position
        local distance = (ballPosition - playerPosition).Magnitude

        if distance < parryDistance then
            local parryTool = findParryTool(player)

            if parryTool then
                -- You can customize this part based on how your ParryTool works
                player.Character:FindFirstChildOfClass("Humanoid"):EquipTool(parryTool)
                wait(0.1)  -- Adjust this wait time based on the ParryTool's activation time
                player.Character:FindFirstChildOfClass("Humanoid"):UnequipTools()
            else
                warn("ParryTool not found in Backpack!")
            end
        end
    end
end

-- Connect the autoParry function to the Heartbeat event
game:GetService("RunService").Heartbeat:Connect(autoParry)
