-- BladeBallScript (Roblox Lua)

local player = game.Players.LocalPlayer
local bladeBall = workspace:WaitForChild("BladeBall")  -- Make sure the part is named "BladeBall"

local bladeBallSpeed = 20  -- Adjust the speed as needed
local parryCooldown = 2  -- Adjust the cooldown time for parrying

local canParry = true

local function moveBladeBallTowardsPlayer(dt)
    local playerPosition = player.Character and player.Character:FindFirstChild("HumanoidRootPart") and player.Character.HumanoidRootPart.Position

    if playerPosition then
        local direction = (playerPosition - bladeBall.Position).unit
        bladeBall.Position = bladeBall.Position + direction * bladeBallSpeed * dt
    end
end

local function parryBladeBall()
    if canParry then
        canParry = false

        -- Customize this part based on how your ParryTool works
        local parryTool = player.Backpack:FindFirstChild("ParryTool")

        if parryTool and parryTool:IsA("Tool") then
            player.Character:FindFirstChildOfClass("Humanoid"):EquipTool(parryTool)
            wait(0.1)  -- Adjust this wait time based on the ParryTool's activation time
            player.Character:FindFirstChildOfClass("Humanoid"):UnequipTools()
        end

        wait(parryCooldown)
        canParry = true
    end
end

game:GetService("RunService").Heartbeat:Connect(function(dt)
    moveBladeBallTowardsPlayer(dt)
end)

-- Automatically parry at regular intervals
while wait(parryCooldown) do
    parryBladeBall()
end

